{
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock", "--no-ci"]
    },
    "version": {
      "allowBranch": ["master"],
      "amend": false,
      "conventionalCommits": true
    },
    "publish": {
      "verifyAccess": false,
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    }
  },
  "useWorkspaces": true,
  "packages": ["packages/*"]
}
